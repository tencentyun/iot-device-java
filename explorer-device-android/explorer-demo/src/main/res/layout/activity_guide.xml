<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tencent.iot.explorer.device.GuideActivity">

    <Button
        android:layout_marginTop="100dp"
        android:id="@+id/btn_explorer_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="控制设备Demo"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_explorer_face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人脸识别Demo"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_explorer_basic" />
</android.support.constraint.ConstraintLayout>